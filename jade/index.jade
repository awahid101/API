    script(src="//translate.google.com/translate_a/element.js?cb=g", defer)
    script.
      function g(){new google.translate.TranslateElement({pageLanguage:'en'},'google');};
      function d(id){return document.getElementById(id);};
      function _(n){d(0).hidden=!0;d(1).hidden=!0;d(2).hidden=!0;d(3).hidden=!0;d(n).hidden=!1;};
      function $(n){var x = d('nav');x.className.indexOf('show')==-1?x.className+=' show':x.className=x.className.replace(' show', '');n!=null&&_(n);};